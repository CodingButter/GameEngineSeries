{
  "name": "@ges/core",
  "version": "0.1.0",
  "description": "Complete 2D game engine package - combines renderer and engine from the GameEngineSeries tutorial. Build browser-based games with TypeScript!",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "CodingButter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodingButter/GameEngineSeries.git",
    "directory": "packages/core"
  },
  "keywords": [
    "game-engine",
    "2d",
    "canvas",
    "gamedev",
    "typescript",
    "browser-game",
    "game-loop"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./renderer": {
      "types": "./dist/renderer.d.ts",
      "import": "./dist/renderer.js"
    },
    "./engine": {
      "types": "./dist/engine.d.ts",
      "import": "./dist/engine.js"
    },
    "./ecs": {
      "types": "./dist/ecs.d.ts",
      "import": "./dist/ecs.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@ges/renderer": "workspace:*",
    "@ges/engine": "workspace:*",
    "@ges/ecs":"workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
